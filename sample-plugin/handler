echo "PLUGIN OPTION: $@"

handler() {
  filter=$1
  event=$2

  case $filter in
    container)
      case $event in
        exec_create | exec_start)
          echo "$event CONTAINER:${3:0:20} DATETIME:$4 COMMAND:$5"
          ;;
        *)
          echo "$event CONTAINER:${3:0:20} DATETIME:$4"
          ;;
      esac
      ;;
    image)
      echo "$event IMAGE:${3:0:20} DATETIME:$4"
      ;;
    *)
      echo "[unknown event?] $@"
  esac
}
